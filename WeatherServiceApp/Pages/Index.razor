@page "/"

<h1>Current Weather</h1>

@if (_current == null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Temp. (C)</th>
                    <th>Temp. (F)</th>
                    <th>Summary</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@_city</td>
                    <td>@_current.TemperatureC.ToString("#.##")</td>
                    <td>@_current.TemperatureF.ToString("#.##")</td>
                    <td>@_current.Summary</td>
                </tr>
            </tbody>
        </table>
    }